<div class="container h-100">
    <div class="htop">
        <h2 class="text-center">{{t "menu.speakers"}}</h2>
        <div class="form-row navbar-panel justify-content-between">
            <div class="col-md-auto">
                {{#if (can "edit application")}}
                    {{#link-to "speakers.create-speaker"}}
                    <button class="btn btn-outline-primary my-2" type="button" title={{t "speakersIndex.addSpeaker"}}>
                        <svg viewBox="0 0 16 16" class="bi bi-plus card-button" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                        </svg>
                    </button>
                    {{/link-to}}
                {{/if}}
            </div>
            <div class="col-md-auto">
                {{!-- <form class="form-inline" onsubmit={{action "searchSpeakers"}}> --}}
                    {{input class="form-control mr-2 search-long search-only" type="search" placeholder=(t "speakersIndex.name") aria-label="Спикер" input=(action 'searchChange') value=searchSpeakers}}
                    {{!-- <button class="btn btn-primary my-2" type="submit">{{t "booksIndex.find"}}</button> --}}
                {{!-- </form> --}}
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-3">
            {{#each model as |speaker|}}
                {{speaker-item  photo=speaker.photo
                                surname=speaker.surname
                                name=speaker.name
                                fName=speaker.fName
                                idSpeaker=speaker.id
                                speaker=speaker
                                tagName=''
                                deleteSpeaker=(action "deleteSpeaker")
                                }}
            {{/each}}
        </div>
    </div>
</div>