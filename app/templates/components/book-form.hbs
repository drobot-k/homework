<form class="edit-form" onsubmit={{action "submitForm"}}>
    <div class="form-group row">
        <label for="inputTitle" class="col-sm-2 col-form-label text-right">{{t "bookForm.title"}}</label>
        <div class="col-sm-10">
            {{!-- было --}}
            {{!-- {{input type="text" class="form-control form-control-lg" id="inputTitle" placeholder="Полное название книги" value=book.title}} --}}

            {{!-- стало, т.к мы теперь используем данные из копии. Так же нужно изменить submitForm --}}
            {{input type="text" class="form-control form-control-lg" id="inputTitle" placeholder=(t "bookForm.titleIn") value=title}}
            
            {{#if error}}
                {{#if (v-get this 'title' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'title' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputAuthor" class="col-sm-2 col-form-label text-right">{{t "bookForm.author"}}</label>
        <div class="col-sm-10">
            {{input type="text" class="form-control form-control-lg" id="inputAuthor" placeholder=(t "bookForm.authorIn") value=author}}

            {{#if error}}
                {{#if (v-get this 'author' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'author' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPagesCount" class="col-sm-2 col-form-label text-right">{{t "bookItem.pages"}}</label>
        <div class="col-sm-10">
            {{input type="number" class="form-control form-control-lg" id="inputPagesCount" placeholder=(t "bookForm.pagesIn") value=pages}}

            {{#if error}}
                {{#if (v-get this 'pages' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'pages' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputDescriptionURL" class="col-sm-2 col-form-label text-right">{{t "bookForm.description"}}</label>
        <div class="col-sm-10">
            {{input type="url" class="form-control form-control-lg" id="inputDescriptionURL" placeholder=(t "bookForm.descriptionIn") value=description}}

            {{#if error}}
                {{#if (v-get this 'description' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'description' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <label for="customFile" class="col-sm-2 col-form-label text-right">{{t "bookForm.cover"}}</label>
        {{input-file type="url" class="input-group input-group-lg col-sm-10" cover=book.coverURL uploadData=uploadData uploadDataChanged=(action "changeUploadData")}}
    </div>
    <div class="form-group row">
        <label for="inputTags" class="col-sm-2 col-form-label text-right">{{t "bookForm.tags"}}</label>
        <div class="col-sm-10">
            {{!-- {{input type="text" class="form-control" id="inputPatronymic" placeholder="#Теги через запятую" value=tags}} --}}
            {{!-- <select multiple="multiple" data-role="tagsinput" style="display: none;" id="inputTags">
                <option value="суперкнига" selected="selected">суперкнига</option>
                <option value="программирование" selected="selected">программирование</option>
            </select> --}}
            {{input-tags tags=tags onChange=(action "changeTags")}}

            {{#if error}}
                {{#if (v-get this 'tags' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'tags' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 text-right">
            <button type="submit" class="btn btn-primary btn-lg" onclick="valid">{{t "meetingForm.save"}}</button>
            {{#link-to "books.index"}}
            <button type="submit" class="btn btn-outline-secondary btn-lg">{{t "meetingForm.cancel"}}</button>
            {{/link-to}}
        </div>
    </div>
</form>