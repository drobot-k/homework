<form class="edit-form" onsubmit={{action "submitForm"}}>
    <div class="form-group row">
        <label for="reportDate" class="col-sm-2 col-form-label text-right">{{t "reportForm.reportDate"}}</label>
        <div class="col-sm-10">
            <div class="datepicker datepicker-meeting date input-group p-0">
                <input type="text" class="form-control form-control-lg" id="reportDate" value={{meetingDate}} disabled="disabled">
                <div class="input-group-append">
                    <span class="input-group-text px-4">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-clock" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm8-7A8 8 0 1 1 0 8a8 8 0 0 1 16 0z"/>
                            <path fill-rule="evenodd" d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5z"/>
                        </svg>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputMark" class="col-sm-2 col-form-label text-right">{{t "reportForm.rating"}}</label>
        <div class="col-sm-10">
            {{input type="number" class="form-control form-control-lg" id="inputMark" placeholder=(t "reportForm.ratingIn") value=bookRating}}

            {{#if error}}
                {{#if (v-get this 'bookRating' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'bookRating' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPresentation" class="col-sm-2 col-form-label text-right big">{{t "reportForm.presentationURL"}}</label>
        <div class="col-sm-10">
            {{input type="url" class="form-control form-control-lg" id="inputPresentation" placeholder=(t "reportForm.presentationURLIn") value=presentationURL}}

            {{#if error}}
                {{#if (v-get this 'presentationURL' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'presentationURL' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputVideo" class="col-sm-2 col-form-label text-right big">{{t "reportForm.videoURL"}}</label>
        <div class="col-sm-10">
            {{input type="url" class="form-control form-control-lg" id="inputVideo" placeholder=(t "reportForm.videoURLIn") value=videoURL}}

            {{#if error}}
                {{#if (v-get this 'videoURL' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'videoURL' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputBook" class="col-sm-2 col-form-label text-right big">{{t "meetingsIndex.book"}}</label>
        <div class="col-sm-10">
            {{#power-select class="selectpicker form-control form-control-lg" id="inputBook" searchEnabled=true data-size="5" title=(t "reportForm.chooseBook") selected=book onchange=(action (mut book)) search=(action "searchBook") as |book|}}
                {{book.title}}
            {{/power-select}}

            {{#if error}}
                {{#if (v-get this 'book' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'book' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>					
    </div>
    <div class="form-group row">
        <label for="inputSpeaker" class="col-sm-2 col-form-label text-right big">{{t "meetingsIndex.speaker"}}</label>
        <div class="col-sm-10">
            {{#power-select class="selectpicker form-control form-control-lg" id="inputSpeaker" searchEnabled=true data-size="5" title=(t "reportForm.chooseSpeaker") selected=speaker onchange=(action (mut speaker)) search=(action "searchSpeaker") as |speaker|}}
                {{speaker.surname}} {{speaker.name}}
            {{/power-select}}

            {{#if error}}
                {{#if (v-get this 'speaker' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'speaker' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>					
    </div>
    <div class="form-group row">
        <label for="inputReview" class="col-sm-2 col-form-label text-right big">{{t "reportForm.review"}}</label>
        <div class="col-sm-10">
            {{textarea id="inputReview" class="form-control form-control-lg" id="inputPatronymic" placeholder=(t "reportForm.reviewIn") rows="4" value=review}}

            {{#if error}}
                {{#if (v-get this 'review' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'review' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 text-right">
            <button type="submit" class="btn btn-primary btn-lg">{{t "meetingForm.save"}}</button>
                <button type="submit" class="btn btn-outline-secondary btn-lg" onclick={{action 'clear' report}}>{{t "meetingForm.cancel"}}</button>
        </div>
    </div>
</form>