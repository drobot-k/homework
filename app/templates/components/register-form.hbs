<form onsubmit={{action "saveUser"}}>
    <img class="mb-4" src="images/logo-dark.png" alt="" height="57">
    <h1 class="h3 mb-3 fw-normal">{{t "register.register"}}</h1>

    <div class="form-floating">
        {{input type="email" class="form-control" id="floatingInput" placeholder=(t "register.email") value=email}}

        {{#each errors.email as |error|}}
            <span class="error-message">{{error.message}}</span>
        {{/each}}
    </div>
    <div class="form-floating">
        {{input type="password" class="form-control" id="floatingPassword" placeholder=(t "register.password") required="true" value=password}}

        {{#each errors.password as |error|}}
            <span class="error-message">{{error.message}}</span>
        {{/each}}  
    </div>

    <div class="field">
        {{g-recaptcha-v2 verified=(action "verified") expired=(action "expired") reset=reset}}
    </div>
    
    <button class="w-100 btn btn-lg btn-primary mb-3" type="submit" disabled={{iAmRobot}}>{{t "register.register"}}</button>
    {{#link-to "index"}}
    <a class="w-100">{{t "register.back"}}</a>
    {{/link-to}}
</form>