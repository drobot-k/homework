<form class="edit-form" onsubmit={{action "submitForm"}}>
    <div class="form-group row">
        <label for="inputSurname" class="col-sm-2 col-form-label text-right">Фамилия</label>
        <div class="col-sm-10">
            {{input type="text" class="form-control form-control-lg" id="inputSurname" placeholder="Введите фамилию" value=speaker.surname}}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label text-right">Имя</label>
        <div class="col-sm-10">
            {{input type="text" class="form-control form-control-lg" id="inputName" placeholder="Введите имя"  value=speaker.name}}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPatronymic" class="col-sm-2 col-form-label text-right big">Отчество</label>
        <div class="col-sm-10">
            {{input type="text" class="form-control form-control-lg" id="inputPatronymic" placeholder="Введите отчество" value=speaker.fName}}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 text-right">
            <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
            {{#link-to "speakers.index"}}
            <button type="submit" class="btn btn-outline-secondary btn-lg">Отмена</button>
            {{/link-to}}
        </div>
    </div>
</form>