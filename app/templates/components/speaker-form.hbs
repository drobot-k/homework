<form class="edit-form" onsubmit={{action "submitForm"}}>
    <div class="form-group row">
        <label for="inputSurname" class="col-sm-2 col-form-label text-right">{{t "speakerForm.surname"}}</label>
        <div class="col-sm-10">
            {{input type="text" class="form-control form-control-lg" id="inputSurname" placeholder=(t "speakerForm.surnameIn") value=surname}}

            {{#if error}}
                {{#if (v-get this 'surname' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'surname' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label text-right">{{t "speakerForm.name"}}</label>
        <div class="col-sm-10">
            {{input type="text" class="form-control form-control-lg" id="inputName" placeholder=(t "speakerForm.nameIn")  value=name}}

            {{#if error}}
                {{#if (v-get this 'name' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'name' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPatronymic" class="col-sm-2 col-form-label text-right big">{{t "speakerForm.middleName"}}</label>
        <div class="col-sm-10">
            {{input type="text" class="form-control form-control-lg" id="inputPatronymic" placeholder=(t "speakerForm.middleNameIn") value=fName}}

            {{#if error}}
                {{#if (v-get this 'fName' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'fName' 'message'}}
                    </span>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 text-right">
            <button type="submit" class="btn btn-primary btn-lg">{{t "meetingForm.save"}}</button>
            {{#link-to "speakers.index"}}
            <button type="submit" class="btn btn-outline-secondary btn-lg">{{t "meetingForm.cancel"}}</button>
            {{/link-to}}
        </div>
    </div>
</form>