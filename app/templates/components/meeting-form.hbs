                                speakerPhoto=report.speaker.photo
                                bookTitle=report.book.title
                                bookAuthor=report.book.author
                                bookRating=report.bookRating
                                review=report.review
                                videoURL=report.videoURL
                                presentationURL=report.presentationURL
                                reportId=report.id
                                report=report
                                tagName=''
                                }}
            {{/each}}
